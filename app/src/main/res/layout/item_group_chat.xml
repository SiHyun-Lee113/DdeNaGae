<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/group_chatitem_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/group_chatitem_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 이름" />
    <TextView
        android:id="@+id/group_chatitem_textview_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여한 사용자"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/group_chatitem_textview_member_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참여한 사용자 수"
        android:layout_marginLeft="20dp"
        />

</LinearLayout>


        <TextView
            android:id="@+id/group_chatitem_textview_lastMessage"
            android:text="마지막 메세지"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>